{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",     
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/**/*.json"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}